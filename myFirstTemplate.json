{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.1124.51302",
      "templateHash": "4135421739121715314"
    }
  },
  "parameters": {
    "deploy": {
      "type": "string",
      "allowedValues": [
        "yes",
        "no"
      ]
    },
    "namePrefix": {
      "type": "string"
    },
    "env": {
      "type": "string",
      "defaultValue": "prod"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "variables": {
    "storageName": "[format('{0}{1}st', parameters('namePrefix'), uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "condition": "[equals(parameters('deploy'), 'yes')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-06-01",
      "name": "[variables('storageName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[if(equals(parameters('env'), 'prod'), 'Premium_LRS', 'Standard_LRS')]"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "minimumTlsVersion": "TLS1_2"
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
    }
  }
}